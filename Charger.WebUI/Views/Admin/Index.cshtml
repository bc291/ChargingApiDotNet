@model IEnumerable<Charger.Domm.Entities.ChOperation>
@{
    ViewBag.Title = "Administracja";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Panel administracyjny (operacje ładowania pojazdów)</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>ID</th>
                <th>Nazwa</th>
                <th class="NumericCol">Cena</th>
                <th>Akcje</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@Html.ActionLink(item.carModel, "Edit", new { item.id })</td>
                    <td class="NumericCol">@item.cost.ToString("c")</td>
                    <td>
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("id", item.id)
                            <input type="submit" value="Usuń" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>