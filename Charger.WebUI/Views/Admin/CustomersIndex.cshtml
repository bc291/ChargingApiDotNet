@model IEnumerable<Charger.Domm.Entities.Customer>

@{
    ViewBag.Title = "Menedżer klientów";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Panel administracyjny (baza klientów)</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>ID</th>
                <th>Imię i Nazwisko</th>
                <th>Adres</th>
                <th>Akcje</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CustomerId</td>
                    <td>@Html.ActionLink(item.FullName, "EditCustomer", new { item.CustomerId })</td>
                    <td>@item.Address</td>
                    <td>
                        @using (Html.BeginForm("DeleteCustomer", "Admin"))
                        {
                            @Html.Hidden("CustomerId", item.CustomerId)
                            <input type="submit" value="Usuń" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<div class="panel-footer">
    @Html.ActionLink("Dodaj nowego klienta", "CreateCustomer", null,
        new { @class = "btn btn-default" })
</div>